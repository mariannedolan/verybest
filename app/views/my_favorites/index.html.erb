<div class="page-header">
  <h1>
    My favorites
    <a href="/my_favorites/new" class="btn btn-lg btn-success">New My favorite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Dish</th>
        <th>Restaurant</th>
        <th>Actions</th>
      </tr>

      <% @my_favorites.each do |my_favorite| %>
      <tr>
        <td><%= my_favorite.dish.created_at %></td>
        <td><%= my_favorite.restaurant.address %></td>
        <td>
          <a href="/my_favorites/<%= my_favorite.id %>" class="btn btn-primary">Show</a>
          <a href="/my_favorites/<%= my_favorite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_my_favorite/<%= my_favorite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
